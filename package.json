{
  "name": "baratie",
  "version": "0.0.1",
  "author": "dannycreations",
  "license": "GPL",
  "type": "module",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "scripts": {
    "dev": "vite",
    "build": "vite build && tsc --emitDeclarationOnly",
    "check": "tsc --noEmit",
    "format": "prettier --write .",
    "update": "npm-check-updates -u -x @types/node",
    "prepare": "husky && bun run build",
    "release": "bun run build && changeset publish --no-git-tag"
  },
  "files": [
    "dist"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/dannycreations/Baratie.git"
  },
  "homepage": "https://github.com/dannycreations/Baratie",
  "dependencies": {
    "clsx": "^2.1.1",
    "react": "^19.2.4",
    "react-dom": "^19.2.4",
    "valibot": "^1.2.0",
    "zustand": "^5.0.11"
  },
  "devDependencies": {
    "@changesets/cli": "^2.29.8",
    "@ianvs/prettier-plugin-sort-imports": "^4.7.1",
    "@tailwindcss/vite": "^4.1.18",
    "@types/node": "^22.19.7",
    "@types/react": "^19.2.11",
    "@types/react-dom": "^19.2.3",
    "@vitejs/plugin-react": "^5.1.3",
    "husky": "^9.1.7",
    "npm-check-updates": "^19.3.2",
    "prettier": "^3.8.1",
    "tailwindcss": "^4.1.18",
    "terser": "^5.46.0",
    "typescript": "^5.9.3",
    "vite": "^7.3.1",
    "vite-plugin-checker": "^0.12.0"
  },
  "bundleDependencies": [
    "@types/react",
    "@types/react-dom"
  ],
  "packageManager": "bun@1.3.8"
}
